<!-- Card -->
<div class="card card-bleed shadow-light-lg mb-6">
    <div class="card-header">

        <div class="row align-items-center">
            <div class="col">

                <!-- Heading -->
                <h4 class="mb-0">
                    {{ 'applications'|capitalize }}
                </h4>

            </div>
            <div class="col-auto">

                <!-- Button -->
                <button class="btn btn-xs btn-primary" data-toggle="modal" data-target="#modalApplication">
                    {{ 'add new'|trans|capitalize }}
                </button>

            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="list-group list-group-flush">
            {% if applications is defined and applications is not empty %}
                {% for application in applications %}
                    <div class="list-group-item">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                {% if application.configuration.logo is defined %}
                                    <!-- Avatar -->
                                    <div class="avatar avatar-xl">
                                        <img
                                            class="avatar-img"
                                            src="{{ application.configuration.logo }}"
                                            alt="..."
                                            style="object-fit: scale-down;
                                            {% if application.configuration.backgroundColor is defined %}
                                                background-color: {{ application.configuration.backgroundColor }};
                                            {% endif %}"
                                        >
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col ml-n5">
                                <!-- Heading -->
                                <p class="mb-0">
                                    {{ application.name }}
                                </p>
                            </div>
                            <div class="col-12 col-md-auto">
                                <a class="btn btn-xs btn-primary btn-block mt-5 mt-md-0" href="{{ path('app_dashboard_application', {id: application.id}) }}">Open</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
