{# get alert & task numbers #}
<!-- Card -->
<div class="card card-bleed border-bottom border-bottom-md-0 shadow-light-lg">

    <!-- Collapse -->
    <div class="collapse d-md-block" id="sidenavCollapse">
        <div class="card-body">

            <!-- Heading -->
            <h6 class="font-weight-bold text-uppercase mb-3">
                {{ 'account'|trans|capitalize }}
            </h6>

            <!-- List -->
            <ul class="card-list list text-gray-700 mb-5">
                <li class="list-item {% if activeItem == 'index' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_index') }}">
                        {{ 'dashboard'|trans|capitalize }}
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'claimYourData' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_claimyourdata') }}">
                        {{ 'claim your data'|trans|capitalize }}
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'alerts' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_alerts') }}">
                        {{ 'alerts'|trans|capitalize }} <span class="badge badge-pill badge-danger-soft ml-auto align-self-center">{% if alertCount is defined %}{{ alertCount }}{% endif %}</span>
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'tasks' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_tasks') }}">
                        {{ 'tasks'|trans|capitalize }} <span class="badge badge-pill badge-danger-soft ml-auto align-self-center">{% if taskCount is defined %}{{ taskCount }}{% endif %}</span>
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'general' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_general') }}">
                        {{ 'general'|trans|capitalize }}
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'security' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_security') }}">
                        {{ 'security'|trans|capitalize }}
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'logs' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_logs') }}">
                        {{ 'logs'|trans|capitalize }}
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'groups' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_groups') }}">
                        {{ 'groups'|trans|capitalize }}
                    </a>
                </li>
                {% if 'group.conduction' in app.user.roles %}
                    <li class="list-item {% if activeItem == 'conduction' %}active{% endif %}">
                        <a class="list-link text-reset" href="{{ path('app_dashboard_conduction') }}">
                            {{ 'conduction'|trans|capitalize }}
                        </a>
                    </li>
                {% endif %}
                {# @todo hier moeten we later nog naar kijken tijdelijk disabled #}
{#                <li class="list-item {% if activeItem == 'notifications' %}active{% endif %}">#}
{#                    <a class="list-link text-reset" href="{{ path('app_dashboard_notifications') }}">#}
{#                        {{ 'notifications'|trans|capitalize }}#}
{#                    </a>#}
{#                </li>#}
            </ul>

            <!-- Heading -->
            <h6 class="font-weight-bold text-uppercase mb-3">
                {{ 'wallet'|trans|capitalize }}
            </h6>

            <!-- List -->
            <ul class="card-list list text-gray-700 mb-5">
                <li class="list-item {% if activeItem == 'claims' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_claims') }}">
                        {{ 'claims'|trans|capitalize }}
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'authorizations' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_authorizations') }}">
                        {{ 'authorizations'|trans|capitalize }}
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'dossiers' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_dossiers') }}">
                        {{ 'dossiers'|trans|capitalize }}
                    </a>
                </li>
            </ul>

            {% if 'ROLE_group.developer' in app.user.roles and 'ROLE_group.developer-view' in app.user.roles %}
                <!-- Heading -->
                <h6 class="font-weight-bold text-uppercase mb-3">
                    {{ 'development'|trans|capitalize }}
                </h6>

                <!-- List -->
                <ul class="card-list list text-gray-700 mb-0">
                    <li class="list-item {% if activeItem == 'applications' %}active{% endif %}">
                        <a class="list-link text-reset" href="{{ path('app_dashboard_applications') }}">
                            {{ 'applications'|trans|capitalize }}
                        </a>
                    </li>
                    <li class="list-item {% if activeItem == 'organizations' %}active{% endif %}">
                        <a class="list-link text-reset" href="{{ path('app_dashboard_organizations') }}">
                            {{ 'organizations'|trans|capitalize }}
                        </a>
                    </li>
                    <li class="list-item">
                        <a class="list-link text-reset" target="_blank" href="{{ path('app_documentation_index') }}">
                            {{ 'documentation'|trans|capitalize }}
                        </a>
                    </li>
                </ul>
            {% endif %}

        </div>
    </div>
</div>
