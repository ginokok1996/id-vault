<div class="modal fade" id="modalAddMailingList" tabindex="-1" role="dialog" aria-labelledby="modalAddMailingList" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <!-- Close -->
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>

                <!-- Heading -->
                <h2 class="font-weight-bold text-center mb-1" id="modalAddMailingList">
                    {{ 'add a new mailing list'|trans|capitalize }}
                </h2>
                <!-- Form -->
                <form method="post" action="{{ path('app_dashboard_application', {id: application.id})  }}" enctype="multipart/form-data" style="padding-top: 1rem">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <!-- Name -->
                    <div class="form-group">
                        <label for="name">{{ 'name'|trans|capitalize }} </label>
                        <input class="form-control" name="name" id="name" type="text" placeholder="{{ 'newsletter'|trans|capitalize }}">
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label for="description">{{ 'description'|trans|capitalize }} </label>
                        <textarea class="form-control" name="description" id="description"
                                  cols="2" rows="1" style="max-height: 8rem; min-height: 3.5rem"
                                  placeholder="{{ 'description'|trans|capitalize }}"
                        ></textarea>
                    </div>

                    <!-- Hidden input for wrcOrganization -->
                    <input type="hidden" value="{{ wrcOrganization }}" name="organization" id="organization">

                    <!-- Submit -->
                    <button name="addMailingList" value="true" class="btn btn-block btn-primary mt-3 lift">
                        {{ 'add'|trans }}
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
