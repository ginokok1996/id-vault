<div class="modal fade" id="modalLeaveGroup" tabindex="-1" role="dialog" aria-labelledby="modalPaymentTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">

                <!-- Close -->
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>

                <!-- Heading -->
                <h2 class="font-weight-bold text-center mb-1" id="modalPaymentTitle">
                    {{ 'leave group'|trans|capitalize }}
                </h2>

                <!-- Form -->
                <form action="{{ path('app_dashboard_organization', {id : organization.id}) }}" method="post" enctype="multipart/form-data" style="text-align: center">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <h4 class="mb-0">
                        {{ 'are you sure you want to leave this group?'|capitalize }}
                    </h4>
                    <!-- Button -->
                    <button class="btn btn-xs btn-danger" name="leaveGroup" value="true">
                        {{ 'yes'|trans|capitalize }}
                    </button>
                    <button  type="button" class="btn btn-xs btn-primary" data-dismiss="modal" aria-label="Close">
                        {{ 'no'|trans|capitalize }}
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>
