<div class="modal fade" id="modalViewAuthorizations{{ claim.id }}" tabindex="-1" role="dialog" aria-labelledby="modalViewAuthorizationsTitle{{ claim.id }}" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">

                <!-- Close -->
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>

                {% if claim.authorizations is defined and claim.authorizations is not empty %}
                    <!-- Heading -->
                    <h2 class="font-weight-bold text-center mb-1" id="modalViewAuthorizationsTitle{{ claim.id }}">
                        {{ 'claim'|trans|capitalize }}
                    </h2>
                    <h3 class="text-center">
                        {% if claim.data is defined and claim.data is not empty %}
                            {% for dataItem in claim.data %}
                                {% if loop.last %}
                                    {{ dataItem }}
                                {% else %}
                                    {{ dataItem }},
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </h3>
                    <h4 class="text-gray-700 text-center">
                        {% if claim.property is defined and claim.property is not empty %}
                            {{ claim.property }}
                        {% endif %}
                    </h4>

                    <!-- Divider -->
                    <hr class="border-gray-300 my-6">

                    <!-- list of authorizations for this claim -->
                    <h3 class="text-center">{{ 'authorizations'|trans|capitalize }}</h3>
                    {% set authorizations = claim.authorizations %}
                    {% set viewAuthorizationsModal = true %}
                    {% include 'dashboard/widgets/authorization_list.html.twig' %}
                {% else %}
                    <!-- Heading -->
                    <h2 class="font-weight-bold text-center mb-1" id="modalViewAuthorizationsTitle{{ claim.id }}">
                        {{ 'no authorizations available'|trans|capitalize }}
                    </h2>
                {% endif %}
            </div>
        </div>
    </div>
</div>
