<div class="modal fade" id="modalPrivateKey" tabindex="-1" role="dialog" aria-labelledby="modalPrivateKey" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">

                <!-- Close -->
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>

                <!-- Heading -->
                <h2 class="font-weight-bold text-center mb-1" id="modalPaymentTitle">
                    {{ 'reset private key'|trans|capitalize }}
                </h2>

                <p class="text-center">{{ 'are you sure you want to reset your private key?' }}</p>

                <div class="text-center">
                    <form action="{{ path('app_dashboard_application', {id: application.id}) }}" method="post">
                        <button name="privateKey" value="true" class="btn btn-xs btn-success">{{ 'yes'|trans|capitalize }}</button>
                        <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-xs btn-danger">{{ 'no'|trans|capitalize }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
