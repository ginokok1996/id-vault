{% extends 'dashboard/dashboard.html.twig' %}

{% block pageContent %}
    <div class="container-md">
        <div class="row">
            <div class="col-12 col-md-3">

                {% set activeItem = 'groups' %}
                {% include 'dashboard/sidenavbar.html.twig' %}

            </div>

            <div class="col-12 col-md-9">

                <!-- Card -->
                <div class="card card-bleed shadow-light-lg mb-6">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">

                                <!-- Heading -->
                                <h4 class="mb-0">
                                    {{ 'groups'|trans|capitalize }}
                                </h4>

                            </div>

                            <div class="col-auto">

                                <!-- Link -->
                                <a class="small text-gray-700" target="_blank" href="{{ path('app_documentation_glossary') }}">
                                    {{ 'what is a group?'|trans|capitalize }}
                                </a>

                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        {% include 'dashboard/widgets/group_list.html.twig' %}
                    </div>
                </div>

            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->

    <!-- modals -->
    {% if memberships is defined and memberships is not empty %}
        {% for membership in memberships %}
            {% include 'dashboard/modals/leave_group_modal.html.twig' with {item: membership} %}
        {% endfor %}
    {% endif %}

{% endblock %}
