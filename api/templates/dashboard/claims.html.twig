{% extends 'dashboard/dashboard.html.twig' %}

{% block pageContent %}
    <div class="container-md">
        <div class="row">
            <div class="col-12 col-md-3">

                {% set activeItem = 'claims' %}
                {% include 'dashboard/sidenavbar.html.twig' %}

            </div>

            <div class="col-12 col-md-9">

                <!-- Card -->
                <div class="card card-bleed shadow-light-lg mb-6">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">

                                <!-- Heading -->
                                <h4 class="mb-0">
                                    {{ 'claims'|trans|capitalize }}
                                </h4>

                            </div>

                            <div class="col-auto">

                                <!-- Link -->
                                <button class="btn btn-xs btn-primary" data-toggle="modal" data-target="#modalUploadClaim">
                                    {{ 'upload'|trans|capitalize }}
                                </button>

                            </div>

                        </div>
                    </div>
                    <div class="card-body">
                        <!-- list of claims -->
                        {% include 'dashboard/widgets/claim_list.html.twig' %}
                    </div>
                </div>

            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->

    <!-- Modals -->
    {% include 'dashboard/modals/upload_claim.html.twig' %}
    

{% endblock %}
