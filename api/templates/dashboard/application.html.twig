{% extends 'dashboard/dashboard.html.twig' %}

{% block pageContent %}
    <div class="container-md">
        <div class="row">
            <div class="col-12 col-md-3">

                {% set activeItem = 'applications' %}
                {% include 'dashboard/sidenavbar.html.twig' %}

            </div>

            <div class="col-12 col-md-9">

                <!-- edit form for organization info -->
                {% include 'dashboard/widgets/edit_application_info.html.twig' %}

                <!-- edit form for styles info -->
                {% include 'dashboard/widgets/application_style.html.twig' %}

                <!-- edit form for mailing list info -->
                {% include 'dashboard/widgets/application_mailing_lists.html.twig' %}

                <!-- Groups -->
                {% include 'dashboard/widgets/application_groups.html.twig' %}

                <!-- edit form for scopes info -->
                {% include 'dashboard/widgets/application_scopes.html.twig' %}

            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->

    <!-- Modals -->
    {% include 'dashboard/modals/add_application_group_modal.html.twig' %}

    {% include 'dashboard/modals/add_mailing_list_modal.html.twig' %}

    {% include 'dashboard/modals/application_public_key.html.twig' %}

    {% include 'dashboard/modals/application_private_key.html.twig' %}

    {% if sendLists is defined and sendLists is not empty %}
        {% for sendList in sendLists %}
            {% include 'dashboard/modals/edit_mailing_list_modal.html.twig' %}
            {% include 'dashboard/modals/delete_mailing_list_modal.html.twig' %}
        {% endfor %}
    {% endif %}

{% endblock %}
